<section class="banner-area relative">
  <div class="container pad-top150">
    <% provide :title, t(".title") %>
    <h1 class="cl-white"><%= t ".title" %></h1>
    <div>
      <div>
        <%= form_with url: ratings_path, local: true, class: "input-group", method: "get" do |f| %>
          <span class="input-group-prepend left">
            <%= f.button "", class: "btn btn-primary" do %>
              <svg class="c-icon hei14 wid20">
                <use xlink:href="/assets/admin/coreui/free-symbol-defs.svg#cui-magnifying-glass"></use>
              </svg> <%= t ".search" %>
            <% end %>
          </span>
          <%= f.text_field :search, class: "form-control left wid30", id: "input1-group2", value: params[:search] %>
        <% end %>
      </div>
    </div>
    <hr class="mt-0">
    <table class = "table table-responsive-sm table-hover table-outline mb-0 bg-white">
      <thead class="thead-light">
        <tr>
          <th class = "text-center"><%= t ".supitch_name" %></th>
          <th class = "text-center"><%= t ".booking_start_time" %></th>
          <th class = "text-center"><%= t ".booking_end_time" %></th>
          <th class = "text-center"><%= t ".content" %></th>
          <th class = "text-center"><%= t ".star" %></th>
          <th class = "text-center"><%= t ".status" %></th>
          <th class = "text-center"><%= t ".total_price" %></th>
          <th class = "text-center"><%= t ".option" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @ratings %>
      </tbody>
    </table>
    <hr class="mt-0">
    <%= will_paginate @ratings %>
  </div>
</section>

