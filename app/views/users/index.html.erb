<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div>
  <%= form_with url: admin_users_path, local: true, class: "input-group", method: "get" do |f| %>
    <span class="input-group-prepend" style = "float:left">
      <%= f.button "", class: "btn btn-primary" do %>
        <svg class="c-icon" style="height: 14px; width: 20px;">
          <use xlink:href="/assets/admin/coreui/free-symbol-defs.svg#cui-magnifying-glass"></use>
        </svg> <%= t ".search" %>
      <% end %>
    </span>
    <%= f.text_field :search, class: "form-control", id: "input1-group2", style: "width: 30%; float: left",
        value: params[:search] %>
  <% end %>
</div>
<hr class="mt-0">
<table class = "table table-responsive-sm table-hover table-outline mb-0">
  <thead class="thead-light">
    <tr>
      <th class = "text-center"><%= t ".id" %></th>
      <th class = "text-center"><%= t ".avatar" %></th>
      <th class = "text-center"><%= t ".email" %></th>
      <th class = "text-center"><%= t ".full_name" %></th>
      <th class = "text-center"><%= t ".gender" %></th>
      <th class = "text-center"><%= t ".phone" %></th>
      <th class = "text-center"><%= t ".activated" %></th>
      <th class = "text-center"><%= t ".option" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "users/user", collection: @users %>
  </tbody>
</table>
<hr class="mt-0">
<%= will_paginate @users %>
