<li>
  <%= gravatar_for user, size: Settings.size_avatar_users_index %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t(".delete"), user, method: :delete,
                                  data: { confirm: t(".you_sure?") } %>
  <% end %>
</li>
